<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="10dp"
    android:background="@null">
    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        android:paddingLeft="15dp"
        android:layout_width="0dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="7dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="40dp"
                android:background="@color/white"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="daoptph23912"
                    android:fontFamily="@font/basic"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:id="@+id/itemPhieuMuon_tv_maTT"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mã Thành Viên: 01"
                    android:fontFamily="@font/quicksand"
                    android:textColor="#3A3A3A"
                    android:textSize="16sp"
                    android:id="@+id/itemPhieuMuon_tv_maThanhVien"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/itemPhieuMuon_tv_maSach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textColor="#3A3A3A"
                    android:textSize="16sp"
                    android:text="Mã Sách: 01"
                     />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/itemPhieuMuon_tv_tienThue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textColor="#3A3A3A"
                    android:textSize="16sp"
                    android:text="Tiền Thuê: 3000 VND"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/itemPhieuMuon_tv_ngayMuon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand"
                    android:textColor="#3A3A3A"
                    android:textSize="16sp"
                    android:text="Ngày Mượn: 04/01/2003"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="100dp"
        android:gravity="top|center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="01"
            android:background="@drawable/strokeviolet_circle"
            android:textSize="37sp"
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:fontFamily="@font/basic"
            android:foregroundGravity="center"
            android:gravity="center"
            android:id="@+id/itemPhieuMuon_tv_maPhieuMuon"
            />
        <TextView
            android:fontFamily="@font/basic"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#F11111"
            android:text="Chưa trả"
            android:padding="3dp"
            android:background="@drawable/white_strokeblue_corner15"
            android:id="@+id/itemPhieuMuon_tv_trangThai"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>