    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@null">

        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="30dp"
            android:layout_width="0dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginStart="1dp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="40dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/itemSach_tv_tenSach"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/basic"
                        android:text="Tên loại sách"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="19sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/itemSach_tv_giaThue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand"
                        android:text="Phạm Thành Đạo"
                        android:textColor="#3A3A3A"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/itemSach_tv_maLoai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand"
                        android:text="Mã Loại: 01"
                        android:textColor="#3A3A3A"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/itemSach_tv_khuyenMai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand"
                        android:text="Khuyến Mãi"
                        android:textColor="#3A3A3A"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/itemSach_tv_soluong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand"
                        android:text="Số lượng"
                        android:textColor="#3A3A3A"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <TextView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="01"
            android:background="@drawable/strokeviolet_circle"
            android:textSize="37sp"
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:fontFamily="@font/basic"
            android:foregroundGravity="center"
            android:gravity="center"
            android:id="@+id/itemSach_tv_maSach"
            />


    </RelativeLayout>